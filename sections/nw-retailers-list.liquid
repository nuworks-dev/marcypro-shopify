{%- comment -%}HTML Settings{%- endcomment -%}
<div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description | newline_to_br }}</p>
</div>
    

<div class="retailers-grid">
    {% for block in section.blocks %}
        {% if block.type == 'retailers_block' %}
            {% if block.settings.imagepicker %}
                <div class="retailer-item">
                    <a href="{{ block.settings.imageurl }}" target="_blank">
                        {{ block.settings.imagepicker | image_url: width: 150, height: 150 | image_tag: class: "full-image" }}
                    </a>
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
</div>

<style>
    .retailers-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Two columns */
        gap: 20px; /* Spacing between items */
    }

    .retailer-item {
        text-align: center;
    }

    .retailer-item img {
        width: 100%; /* Ensure images take full width of their container */
        aspect-ratio: 1 / 1; /* Make images square */
        object-fit: cover; /* Ensure images are cropped to fit the square */
        border-radius: 10px; /* Optional: Add rounded corners */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Optional: Add a slight shadow for better design */
    }
</style>


{%- comment -%}Settings Right{%- endcomment -%}
{% schema %}
    {
        "name": "NW Retailers List", 
        "settings": [

            {
                "type": "inline_richtext",
                "id": "heading",
                "label": "Title",
                "default": "Input Text Here"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Description",
                "default": "Input Text Here"
            }

        ],
        "blocks": [
            {
                "type": "retailers_block",
                "name": "Retailers Block",
                "limit": 10,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "imagepicker",
                        "label": "Image Picker",
                     },
                     {
                        "type": "url",
                        "id": "imageurl",
                        "label": "Image URL",
                     }
                ]
            
            }
        ],





        "presets": [
            {
                "name": "NW Retailers List"
            }


        ]


    }
{% endschema %}