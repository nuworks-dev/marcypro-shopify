<section class="trust-badges">
  <div class="trust-badge">
    <i class="icon-truck"></i>
    <div class="trust-details">
      <div class="trust-badge-header">Free Ground Shipping</div>
      <div class="trust-badge-info">For All New Orders</div>
    </div>
  </div>
  
  <div class="trust-badge">
    <i class="icon-shield"></i>
    <div class="trust-details">
      <div class="trust-badge-header">2-Year Limited Warranty</div>
      <div class="trust-badge-info">From Your Delivery Date</div>
    </div>
  </div>
  
  <div class="trust-badge">
    <i class="icon-lock"></i>
    <div class="trust-details">
      <div class="trust-badge-header">Safe Payments</div>
      <div class="trust-badge-info">Trusted SSL Protection</div>
    </div>
  </div>
</section>

<style>
  .trust-badges {
    display: flex;
    justify-content: space-around;
    background: #f9f6f2;
    padding: 20px;
    text-align: center;
  }
  
  @media (max-width: 425px) {
    .trust-badges {
      flex-direction: column;
      align-items: start;
      gap: 12px;
    }
  }
  
  .trust-badge {
    flex: 1;
    max-width: 300px;
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: blanchedalmond;
  }
  
  .trust-details {
    display: flex;
    flex-direction: column;
    text-align: left;
    max-width: 208px;
    @media (max-width: 425px){
      mix-width: 185;
      max-width: 208px;
      height: 40;


    }
  }
  
  .trust-badge i {
    font-size: 24px;
    color: #ff6600;
  }
  
  .trust-badge-header {
    font-family: Montserrat;
    font-weight: 700;
    font-size: 16px;
    line-height: 20px;
    letter-spacing: 0%;
    font-weight: bold;
    flex-wrap: nowrap;
  }
  
  .trust-badge-info{
    font-family: Montserrat;
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
    letter-spacing: 0%;
    color: #555;
    text-align: left;
  }
</style>

{% schema %}
{
  "name": "Trust Badges Section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Why Shop With Us?"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f6f2"
    }
  ],
  "presets": [
    {
      "name": "Trust Badges Section"
    }
  ]
}
{% endschema %}

<div style="background-color: {{ section.settings.background_color }}; padding: 20px; text-align: center;">
  <h2>{{ section.settings.heading }}</h2>
</div>
