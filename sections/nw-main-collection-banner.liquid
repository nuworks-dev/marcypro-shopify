{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{% if template.name == 'collection' %}
	<style>
		.collection-hero__title {
      margin-top: 265px;;
			color: #fff;
			font-family: Montserrat;
			font-size: 74px;
			font-weight: 700;
			line-height: 78px;
			text-align: center;
			text-transform: uppercase;
		}
	</style>
{% endif %}

{%- style -%}
	.nw-collection-banner.collection-hero {
		position: relative;
		min-height: 500px;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: white; /* Ensure text is visible */

		background-size: contain;
		background-position: unset;
		margin-top: 0;
		min-height: unset;
		height: 440px;
	}

	.collection-hero::before {
	content: "";
	position: absolute;
	inset: 0;
	background: rgba(0, 0, 0, 0.5); /* Dark overlay for readability */
	z-index: 1;
	}

	.collection-hero__inner {
	position: relative;
	z-index: 2;
	max-width: 1200px;
	padding: 2rem;
	}

	.shop-all-text {
		font-weight: bold; /* Or a numeric value like 700 */
		letter-spacing: 0.05em; /* Adjust as needed */
		color: #333; /* Dark gray - adjust as needed */
		-webkit-text-stroke: 2px white; /* For WebKit browsers */
		text-stroke: 2px white; /* Standard property */
	}

	@media screen and (min-width: 1440px) {
		.nw-collection-banner.collection-hero {
			background-size: contain;
			background-position: inherit;
			height: auto;
			min-height: 442px;
		}
	}

	@media screen and (max-width: 1366px) {
		.nw-collection-banner.collection-hero {
			background-size: contain;
			background-position: unset;
			height: 360px;
		}
	}

	@media screen and (max-width: 1024px) {
		.nw-collection-banner.collection-hero {
			background-size: contain;
			background-position: unset;
			margin-top: 0;
			min-height: unset;
			height: 270px;
			margin-top: 45px;
		}

		.collection-hero__title {
			margin-top: 145px;
		}
	}

	@media screen and (max-width: 853px) {
		.nw-collection-banner.collection-hero {
			height: 500px;
			{% if collection.metafields.custom.collection_thumbnail.value and collection.metafields.custom.collection_thumbnail.value != 'blank' %}
				background-image: url('{{ collection.metafields.custom.collection_thumbnail.value | image_url: width: 480 }}') !important;
			{% endif %}
		}
	}

	@media screen and (max-width: 768px) {
		.nw-collection-banner.collection-hero {
			background-size: contain;
			background-position: unset;
			margin-top: 0;
			min-height: unset;
			height: 500px;
			margin-top: 45px;
		}
	}
	@media screen and (max-width: 660px) {
		.nw-collection-banner.collection-hero {
			height: 440px;
		}
	}
	@media screen and (max-width: 590px) {
		.nw-collection-banner.collection-hero {
			height: 360px;
		}
	}
	@media screen and (max-width: 480px) {
		.nw-collection-banner.collection-hero {
			height: 300px;
			position: relative;
			background-size: contain;
			background-position: unset;
		}
		.nw-collection-banner.collection-hero .collection-hero__inner {
			position: absolute;
			bottom: 0px;
		}
		.collection-hero__title {
			font-size: clamp(24px, 5vw, 74px);
			line-height: unset;
		}
	}
	@media screen and (max-width: 412px) {
		.nw-collection-banner.collection-hero {
			height: 250px;
		}
	}
	@media screen and (max-width: 390px) {
		.nw-collection-banner.collection-hero {
			height: 230px;
		}
	}
	@media screen and (max-width: 360px) {
		.nw-collection-banner.collection-hero {
			height: 220px;
		}
	}
{%- endstyle -%}
<div 
  class="nw-collection-banner collection-hero color-{{ section.settings.color_scheme }} gradient"
  {% if section.settings.show_collection_image and collection.image %}
    style="background-image: url('{{ collection.image | image_url: width: 1440 }}');"
  {% endif %}
>
  <div class="collection-hero__inner page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="collection-hero__text-wrapper">
      <h1 class="collection-hero__title">
        <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
        
        {% if collection.title == 'Products' %}
			<span>SHOP ALL</span>
          {% else %}
        {{- collection.title | escape -}}
        {% endif %}
		
      </h1>

      {%- if section.settings.show_collection_description -%}
        <div class="collection-hero__description rte">{{ collection.description }}</div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
	"name": "NW Collection Banner",
	"class": "section",
	"disabled_on": {
		"groups": ["header", "footer"]
	},
	"settings": [
	{
		"type": "paragraph",
		"content": "t:sections.main-collection-banner.settings.paragraph.content"
	},
	{
		"type": "checkbox",
		"id": "show_collection_description",
		"default": true,
		"label": "t:sections.main-collection-banner.settings.show_collection_description.label"
	},
	{
		"type": "checkbox",
		"id": "show_collection_image",
		"default": false,
		"label": "t:sections.main-collection-banner.settings.show_collection_image.label",
		"info": "t:sections.main-collection-banner.settings.show_collection_image.info"
	},
	{
		"type": "color_scheme",
		"id": "color_scheme",
		"label": "t:sections.all.colors.label",
		"default": "scheme-1"
	}
	],
	"presets": [
	{
		"name": "NW Collection Banner"
	}
	]
}
{% endschema %}

